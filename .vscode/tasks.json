{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "build",
        "command": "dotnet",
        "type": "process",
        "args": [
          "build",
          "${workspaceFolder}/SmeltIt/SmeltIt.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "kind": "build"        
        }
      },
      {
        "label": "dev",
        "command": "dotnet",
        "type": "process",
        "args": [
          "watch",        
          "build",
          "--project",
          "${workspaceFolder}/SmeltIt/SmeltIt.csproj",
          "--",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile",
        "group": {
          "kind": "build",
          "isDefault": true   
        }
      },
      {
        "label": "publish",
        "command": "dotnet",
        "type": "process",
        "args": [
          "publish",
          "${workspaceFolder}/SmeltIt/SmeltIt.csproj",
          "/property:GenerateFullPaths=true",
          "/consoleloggerparameters:NoSummary"
        ],
        "problemMatcher": "$msCompile"
      },
      {
        "label": "watch",
        "command": "dotnet",
        "type": "process",
        "args": [
          "watch",
          "run",
          "--project",
          "${workspaceFolder}/SmeltIt/SmeltIt.csproj"
        ],
        "problemMatcher": "$msCompile",      
        "dependsOn": "build",
        "isBackground": true
      }
    ]
  }